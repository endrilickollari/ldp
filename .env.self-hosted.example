# Self-Hosted Deployment Configuration
# Copy this to .env for self-hosted deployments

# Database
DATABASE_URL=sqlite:///./app.db

# Deployment Mode
DEPLOYMENT_MODE=self_hosted

# Instance Configuration (REQUIRED for self-hosted)
INSTANCE_ID=your-unique-instance-id-here
INSTANCE_NAME=My Company Document Processing
ORGANIZATION_NAME=Your Company Name
ADMIN_EMAIL=admin@yourcompany.com

# License Server Configuration
LICENSE_SERVER_URL=https://licenses.yourdomain.com
LICENSE_VALIDATION_ENDPOINT=/v1/licenses/validate

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# External Services
GOOGLE_API_KEY=your-google-api-key
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# License Settings
REQUIRE_LICENSE_VALIDATION=true
LICENSE_CACHE_TTL=300

# Email (optional)
SMTP_HOST=smtp.yourcompany.com
SMTP_PORT=587
SMTP_USER=noreply@yourcompany.com
SMTP_PASSWORD=your-smtp-password
